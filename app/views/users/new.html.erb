<h1>Sign up to <%= SITE_NAME -%></h1>

<% if ENABLE_RPX %>
  <div style="margin: 1.5em 0; text-align: center;">
    You can either create a new account (left) or use an existing <%= list_of_rpx_accounts -%> account (right).
  </div>
<% end %>

<div style="float: right; width: 53%; line-height: 1.6;">

	<% if ENABLE_RPX %>
		<div style="margin-bottom: 1.5em;">
			<%= render :partial => "shared/rpx_signin.html.erb" -%>
		</div>
	<% end %>
	
	<div class="box_info_standout" style="font-size: 108%; padding: 0.7em 1.2em;">
		<%= sign_up_benefits_text -%>	
	</div>
	
</div>

<div class="box_form" style="width: 40%;">

	<% form_for(@user) do |f| %>
	
	  <%= f.error_messages %>
		<fieldset>
		  <legend>Email Address</legend>
		  <p>
		    <%= f.label :email, "Your email address" %>
				<span class="required">*</span>
				<br />
		    <%= f.text_field :email %>
		  </p>  
			<p>
		    <%= f.label :email_confirmation, "Confirm your email address" %>
				<span class="required">*</span>
				<br />
		    <%= f.text_field :email_confirmation %>
		  </p>
		</fieldset>
		<fieldset>
		  <legend>Password</legend>
		  <p>
		    <%= f.label :password %>
				<span class="required">*</span>
				<br />
		    <%= f.password_field :password %>
		  </p>
		  <p>
		    <%= f.label :password_confirmation, "Confirm your password" %>
				<span class="required">*</span>
				<br />
		    <%= f.password_field :password_confirmation %>
		  </p>
		</fieldset>
		<fieldset>
		  <legend>Some Information About You</legend>
			<p>
		    <%= f.label :display_name, "Your name" %><br />
		    <%= f.text_field :display_name %>
		  </p>
			<p>
		    <%= f.label :public_email, "Your public email address <span class='faded'>(so people can contact you)</span>" %><br />
		    <%= f.text_field :public_email, :size => 45 %>
		  </p>
		  <p>
		    <%= f.label :affiliation, "Affiliation (e.g. institute, company)" %><br />
		    <%= f.text_field :affiliation, :size => 45 %>
		  </p>
		  <p>
		    <%= f.label :country %><br />
		    <%= f.country_select :country, ["United Kingdom"], { :prompt => "- Please select a country -" } %>
		  </p>
		</fieldset>
		
		<fieldset>
  		<legend>Notifications</legend>
			<%= render :partial => 'form_receive_notifications', :locals => { :form => f }  -%>
		</fieldset>
		
		<p class="center">
			By clicking 'Sign up' you agree to our <%= link_to "terms of use", "/termsofuse", :target => '_blank' -%> 
		</p>
		
		<p class="center">
		  <%= f.submit "Sign up", :disable_with => "Signing up..." %>
		</p>
		
	<% end %>

</div>
