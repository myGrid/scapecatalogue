<% t "Sign In" -%>

<h1>
	Sign In to <%= SITE_NAME -%>
	<%= info_icon_with_tooltip(account_sign_in_options_info) -%>
</h1>

<% if logged_in? %>

	<b>You are already signed in...</b>
	
	<br/>
	
	<p><%= link_to("Click here to sign out", logout_url, :class => "red_arrow", :method => :delete) -%></p>

<% else %>

	<%= render :partial => "shared/login_form" -%>
	
	<% unless !ENABLE_RPX or params.has_key?(:hide_rpx) %>
		<div style="float: left; margin-left: 3em; margin-top: 1em; max-width: 600px; line-height: 1.6;">
			<%= render :partial => "shared/rpx_signin.html.erb",
								 :locals => { :redirect_to_url => params[:redirect_to] } -%>
		</div>
	<% end %>
	
	<span class="clear"></span>
	
<% end %>